<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/otp_unselected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imgRestaurant"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/otp_unselected"
        />
    <TextView
        android:id="@+id/txtRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgRestaurant"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Name of restaurant"
        android:layout_marginLeft="13dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="9dp"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/txtRestaurantAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtRestaurantName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:hint="Address"
        android:textSize="14sp"
        android:textColor="#5B5B5E"
        android:layout_marginTop="9dp"
        android:gravity="left"
        />
</androidx.constraintlayout.widget.ConstraintLayout>